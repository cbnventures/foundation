{
  "extends": [
    "./src/presets/tsconfig/dx-essentials.json",
    "./src/presets/tsconfig/dx-strict.json",
    "./src/presets/tsconfig/env-node.json"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "rootDir": "./",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "types": [
      "@commander-js/extra-typings",
      "@types/eslint-plugin-jsx-a11y",
      "@types/node"
    ]
  },
  "include": [
    "./eslint.config.mts",
    "./src/**/*"
  ],
  "exclude": [
    "./build/**",
    "./node_modules/**"
  ]
}
