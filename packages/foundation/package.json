{
  "name": "@cbnventures/foundation-nova",
  "displayName": "Foundation Nova",
  "version": "1.0.0",
  "description": "Scripts, templates, and project configuration for the common JavaScript and TypeScript developer",
  "main": "",
  "exports": {
    "./eslint": "./build/presets/eslint/index.mjs",
    "./eslint/dx-code-style": "./build/presets/eslint/dx-code-style.mjs",
    "./eslint/env-browser": "./build/presets/eslint/env-browser.mjs",
    "./eslint/env-edge": "./build/presets/eslint/env-edge.mjs",
    "./eslint/env-node": "./build/presets/eslint/env-node.mjs",
    "./eslint/env-service-workers": "./build/presets/eslint/env-service-workers.mjs",
    "./eslint/env-web-workers": "./build/presets/eslint/env-web-workers.mjs",
    "./eslint/fw-docusaurus": "./build/presets/eslint/fw-docusaurus.mjs",
    "./eslint/fw-expressjs": "./build/presets/eslint/fw-expressjs.mjs",
    "./eslint/fw-nextjs": "./build/presets/eslint/fw-nextjs.mjs",
    "./eslint/lang-javascript": "./build/presets/eslint/lang-javascript.mjs",
    "./eslint/lang-typescript": "./build/presets/eslint/lang-typescript.mjs",
    "./eslint/platform-cloudflare-workers": "./build/presets/eslint/platform-cloudflare-workers.mjs",
    "./eslint/scope-ignores": "./build/presets/eslint/scope-ignores.mjs",
    "./eslint/tool-vite": "./build/presets/eslint/tool-vite.mjs",
    "./tsconfig/dx-essentials.json": "./build/presets/tsconfig/dx-essentials.json",
    "./tsconfig/dx-strict.json": "./build/presets/tsconfig/dx-strict.json",
    "./tsconfig/env-browser.json": "./build/presets/tsconfig/env-browser.json",
    "./tsconfig/env-edge.json": "./build/presets/tsconfig/env-edge.json",
    "./tsconfig/env-node.json": "./build/presets/tsconfig/env-node.json",
    "./tsconfig/env-service-worker.json": "./build/presets/tsconfig/env-service-worker.json",
    "./tsconfig/env-web-worker.json": "./build/presets/tsconfig/env-web-worker.json",
    "./tsconfig/fw-docusaurus.json": "./build/presets/tsconfig/fw-docusaurus.json",
    "./tsconfig/fw-expressjs.json": "./build/presets/tsconfig/fw-expressjs.json",
    "./tsconfig/fw-nextjs.json": "./build/presets/tsconfig/fw-nextjs.json",
    "./tsconfig/platform-cloudflare-workers.json": "./build/presets/tsconfig/platform-cloudflare-workers.json",
    "./tsconfig/tool-vite.json": "./build/presets/tsconfig/tool-vite.json"
  },
  "type": "module",
  "private": false,
  "scripts": {
    "dev": "npm-run-all --sequential dev:*",
    "dev:watch": "tsc --project tsconfig.json --watch",
    "build": "npm-run-all --sequential build:*",
    "build:clean": "npm run clean",
    "build:build": "tsc --project tsconfig.json --outDir ./build",
    "build:fix": "tsc-alias -p tsconfig.json",
    "build:copy": "copyfiles -u 3 \"src/presets/tsconfig/**/*.json\" ./build/presets/tsconfig",
    "check": "npm-run-all --sequential check:*",
    "check:lint": "eslint ./ --ext .js,.jsx,.mjs,.cjs,.ts,.tsx,.mts,.cts",
    "check:types": "tsc --noEmit",
    "clean": "npm-run-all --parallel clean:*",
    "clean:clear": "rimraf ./build"
  },
  "types": "",
  "repository": {
    "type": "git",
    "url": "git://github.com/cbnventures/foundation-nova.git"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/cbnventures"
    },
    {
      "type": "custom",
      "url": "https://www.cbnventures.io/paypal/"
    }
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-flat-config",
    "typescript",
    "tsconfig",
    "tsconfig-presets",
    "linting",
    "code-style",
    "scripts",
    "templates",
    "react",
    "nextjs",
    "node",
    "monorepo"
  ],
  "author": {
    "name": "Jacky Liang",
    "email": "hello@mrjackyliang.com",
    "url": "https://www.mrjackyliang.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cbnventures/foundation-nova/issues"
  },
  "files": [],
  "homepage": "https://github.com/cbnventures/foundation-nova",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@eslint/js": "9.33.0",
    "@stylistic/eslint-plugin": "5.2.3",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "16.3.0",
    "typescript-eslint": "8.39.1"
  },
  "devDependencies": {
    "@types/eslint-plugin-jsx-a11y": "6.10.0",
    "@types/node": "24.2.1",
    "copyfiles": "2.4.1",
    "eslint": "9.33.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "eslint": "^9",
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  }
}
