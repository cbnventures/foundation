{
  "extends": [
    "@cbnventures/foundation-nova/tsconfig/dx-essentials.json",
    "@cbnventures/foundation-nova/tsconfig/dx-strict.json",
    "@cbnventures/foundation-nova/tsconfig/fw-docusaurus.json"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "rootDir": "./"
  },
  "include": [
    "./docusaurus.config.ts",
    "./eslint.config.mts",
    "./sidebars.ts",
    "./src/**/*"
  ],
  "exclude": [
    "./.docusaurus/**",
    "./build/**",
    "./node_modules/**"
  ]
}
